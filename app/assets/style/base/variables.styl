//== Colors
$color-bg = #f6f6f6
$color-gray-light = #e6e6e6
$color-gray-border = #bababa
$color-gray = #3e3e3e
$color-gray-dark = #252525
$color-primary = #dccaa0
$color-primary-b = #dfc991
$color-primary-strong = #C6AC6F

//== Helpers
$shadow = inset 0 0 3px 0 rgba(0,0,0,.5);

//== Fonts styles reset
$font-family-sans = 'Kievit', Helvetica, sans-serif
$font-family-serif = 'PT Serif', Georgia, "Times New Roman", Times, serif

$font-size-base = 20px
$font-size-h1 = floor($font-size-base * 2.8) // 56px
$font-size-h2 = floor($font-size-base * 1.4) // 28px
$font-size-h3 = ceil($font-size-base * 1.2) // 24px
$font-size-h4 = $font-size-base
$font-size-h5 = ceil($font-size-base * 0.8) // 16px
$font-size-h6 = ceil($font-size-base * 0.7) // 14px

//== Global line-height reset
$line-height-base = 1.3
$line-height-computed = floor($font-size-base * $line-height-base) // 26px

//== Headings reset
$headings-font-family = inherit
$headings-font-weight = 500
$headings-line-height = 1.1// 0.93
$headings-color = inherit

//== Grid system
$grid-columns = 12
$grid-gutter-width = 20px
$grid-column = 300px

$grid-heights = 16 18 20 21 22 25 28 36 40 42 46 62 64 66 86

//== Container sizes
$container-sm = (2 * $grid-column) + ((2 - 1) * $grid-gutter-width) + 20
$container-md = (3 * $grid-column) + ((3 - 1) * $grid-gutter-width) + 20
$container-lg = (4 * $grid-column) + ((4 - 1) * $grid-gutter-width)
$container-gutter = 10

//== Media queries breakpoints
$screen-xs = $grid-column + ($container-gutter*2)
$screen-sm = $container-sm + ($container-gutter*2)
$screen-md = $container-md + ($container-gutter*2)
$screen-lg = $container-lg + ($container-gutter*2)

$screen-xs-min = $screen-xs
$screen-sm-min = $screen-sm
$screen-md-min = $screen-md
$screen-lg-min = $screen-lg

$screen-xs-max = ($screen-sm-min - 1)
$screen-sm-max = ($screen-md-min - 1)
$screen-md-max = ($screen-lg-min - 1)

