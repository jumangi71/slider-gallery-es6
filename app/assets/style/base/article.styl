$padding-default = 20px

.articles
  &-slider
    box-shadow: $shadow
    background: #fff;

    .article-container
      padding: 0
      margin-bottom 0
      background-color: transparent;
      border-bottom: 1px solid #EAEAEA;
      box-shadow: none;

      &:hover
        background-color transparent

      .article-header
        color #000000

      .article-second_part
        bottom: 0;

      .breadcrumbs
        color #000
        &-item
          color #000

    @media (max-width $screen-sm)
      width: 1050px
      overflow hidden
      box-shadow none
      margin 0 -10px

      .article-container
        float: left
        width: 260px;
        border-right 1px solid #eaeaea
        border-bottom none

        &:last-child
          border-color transparent

      &-wrap
        overflow-x: scroll

.article
  &-container
    background-color $color-bg
    position: relative;
    padding: 10px;
    box-shadow: $shadow
    margin-bottom 20px
    transition: background-color 0.3s ease;

    &:hover
      background-color: $color-primary

      //.article-wrapper
      //.article-double .article-second_part
      //  background #47423F

      .article-cover:before
        background-color: rgba(0,0,0,.6);
        opacity: 1;

      .article-header
        color $color-primary

    @media (max-width $screen-sm)
      padding 0
      box-shadow none


  &-wrapper
    height: 100%;
    //padding 12px $padding-default
    float: left;
    width: 100%;
    position relative
    background-color: #ebeded;
    background-repeat: no-repeat;
    background-position: center center;
    background-size cover
    overflow: hidden;

    .breadcrumbs
      margin-top: 12px !important
      padding: 0 20px !important
      text-align: left !important
      color #fff

      &-item
        color #fff

    .tag
      &-container
        position relative
        padding-left $padding-default

  &-cover
    background-size: cover;
    background-position: center center;
    position: absolute
    left 0
    right 0
    top 0
    bottom 0
    width: 100%;
    height: 100%;

    &:before
      content: '';
      position: absolute;
      left: 0;
      top: 0;
      width: 100%;
      height: 100%;
      opacity: 0.3;
      background-color: rgba(0,0,0,0.3);
      transition: background-color 0.3s ease;
      background-repeat: no-repeat;
      background-position: top center;


  &-bg-0
    background #EBEDED
  &-bg-1
    background #F2EDE9

  &-no-bg
    .breadcrumbs
      margin-top 17px
      font-size 12px
      letter-spacing: 0.92px;

    .article-cover
      background-image none !important

    .article-wrapper
    .article-cover:before
      background-color: transparent !important

    .article-wrapper:hover
      .article-cover:before
        background-color: transparent !important

    .article-second_part
      padding-top 5px
      overflow: visible


      .article-header
        margin-bottom 0
        position: relative;

    .tag-container
      padding-right: 20px;
      margin-bottom: 20px;
      height: 24px;
      color: #000 !important

      .tag-item
        color #000


  &-no-bar
    .article-second_part
      bottom 0

  &-anchor
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 100%;
    z-index: 1;
    outline none

  &-header
    margin 0 0 15px 0
    font-size: 28px;
    font-weight 600
    color: #000000;
    line-height: 28px;
    word-break: break-word;
    transition: color 0.1s ease;

  &-preview
    font-size: 16px;
    color: #FFFFFF;
    line-height: 18px;
    max-width 250px
    position: relative;

  &-bottom_bar
    position: absolute;
    width: 100%;
    left: 0;
    right: 0;
    bottom: 0;
    z-index 2

    &-panel
      position relative
      height: 40px;
      overflow hidden

      &:before
        content: ''
        position: absolute;
        left: 0;
        right: 0;
        top: 0;
        background-image: linear-gradient(-180deg, rgba(0,0,0,0.30) 0%, rgba(0,0,0,0.05) 50%);
        width 100%
        height 100%

      @media (max-width $screen-sm)
        &:before
          display none

    &-share
      float: right
      position: relative
      padding-right: 10px
      line-height: 40px
      text-align: right
      height: 100%

      a
        text-decoration none
        color #000000
        font-size: 13px;
        padding: 0 5px;
        display: inline-block;

        &:hover
          color: $color-primary !important


  &-second_part
    position: relative;
    padding: 12px $padding-default
    overflow hidden


  &-no-cover.article-double
    .article-cover
      height 0
    .article-cover:before
      height 100% !important
    .breadcrumbs
      position relative
    .article-second_part
      margin-top 0

  &-no-cover
    .breadcrumbs
      color #000
      opacity .5

      .breadcrumbs-item
        color #000

    .article-second_part
      padding-bottom 0

    .article-preview
      color: #000;
      padding: 0 21px 15px 21px;
      max-width 100%
      font-size 18px
      line-height 21px

  &-blog
    width: 100%;
    padding: 0 10px;

    &-container
      position: relative;
      background: #fff;
      width: 100%;
      height: 100%;
      padding 15px 22px



make-size($size, $font-size)
  .article-header
    font-size unit($font-size, 'px')
    line-height unit($font-size, 'px')
  .article-header-long
    font-size: unit(floor($font-size / 1.16), 'px')
    line-height: unit(floor($font-size / 1.16), 'px')


  .article-bottom_bar-share a,
  .tag-container
  .tag-item
  .article-header
    color ($size == 'double') ? #000 : #fff

  if $size == 'big' || $size == 'grand'
    .article-preview
      position absolute
      bottom 60px
      left 20px
      right 20px

    &.article-no-bar
      .article-preview
        bottom 20px

  if $size == 'single'
    .breadcrumbs
      position: relative;
      left: 0;
      right: 0;
      top: 0;
    &.article-wrapper
    & .article-wrapper
      background-position top center
      background-size: initial;
      &:before
        background transparent

    .article-cover
      position absolute
      left 0
      right 0
      top 0
      bottom 0

  if $size == 'double'
    .breadcrumbs
      position: absolute;
      left: 0;
      right: 0;
      top: 0;
    &.article-wrapper
    & .article-wrapper
      background-position top center
      background-size: initial;
      &:before
        background transparent

    .article-cover
      height: 180px;
      position relative
      left 0
      right 0
      top 0
      bottom 0

    .article-bottom_bar-panel:before
      opacity: 0.3;

  if $size == 'wide'
    .breadcrumbs
      position relative

    .article-cover
      height auto
      position absolute

    .article-second_part
      @media (min-width $screen-lg)
        width: 60%;

  if $size == 'incut'
    .breadcrumbs
      margin-top 17px
      padding-left 20px
    .breadcrumbs
    .article-second_part
      margin-left 50%
    .article-preview
      max-width 100%
      margin-left: 50%;
      padding: 0 20px;

    @media (max-width $screen-md)
      .article-cover
        background-position: left center;

      .breadcrumbs
      .article-preview
      .article-second_part
        margin-left: 31%

    @media (max-width $screen-sm)
      .article-preview
      .breadcrumbs
      .article-second_part
        margin-left 0


.article-single
  make-size('single', 24)
.article-double
  make-size('double', 28)
.article-incut
  make-size('incut', 48)
.article-wide
  make-size('wide', 24)
.article-big
  make-size('big', 36)
.article-grand
  make-size('grand', 36)


