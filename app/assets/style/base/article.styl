.make-xs-single
  @media (max-width $screen-sm)
    .col-h-xs-42
    .col-h-xs-40
      height 180px !important
    make-size('single', 24)

.make-sm-double
  @media (min-width $screen-sm) and (max-width $screen-md)
    .col-h-xs-20
      height 420px !important
    make-size('double', 28)

.make-md-double
  @media (min-width $screen-md) and (max-width $screen-md-max)
    .col-h-xs-20
      height 420px !important
    make-size('double', 28)

.make-md-wide
  @media (min-width $screen-md) and (max-width $screen-md-max)
    .col-h-xs-42
      height 200px !important
    make-size('wide', 24)